<% layout("/layouts/boilerplate") %>

<div class="row mt-3">
    <div class="col-6 offset-3">
        <h2>SignUp on WanderLust</h2>
        <form action="/signup" method="POST" novalidate class="needs-validation">
            <div>
                <label for="username" class="form-label mt-4">Username</label>
                <input name="username" id="username" placeholder="Enter username" type="text" class="form-control" required>
                <div class="valid-feedback">looks good</div>
                <div class="invalid-feedback">Please enter username</div>
            </div>
            <div>
                <label for="email" class="form-label mt-4">Email</label>
                <input name="email" id="email" placeholder="Enter email" type="email" class="form-control" required>
                <div class="valid-feedback">looks good</div>
                <div class="invalid-feedback">Please enter email</div>
            </div>
            <div>
                <label for="password" class="form-label mt-4">Password</label>
                <input name="password" id="password" placeholder="Enter password" type="password" class="form-control" required>
                <div class="valid-feedback">looks good</div>
                <div class="invalid-feedback">Please enter password</div>
            </div>
            <br>
            <button class="btn btn-success btn-sm">SignUp</button>
        </form>
    </div>
</div>